            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >



                        <Button
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:text="get this \n "
                android:background="#ff7522"

                />
            <Button
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:text="add to wishlist \n "
                android:background="#ffaa1d"
                android:id="@+id/adddesigntowishlistbtn" />

            </LinearLayout>-->
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:gravity="bottom|center"
        android:baselineAligned="true">

        <Button android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cart(0)"
            android:drawableLeft="@drawable/shopping_cart_24"

            android:background="#e91e63"
            android:id="@+id/carttxtview"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:onClick="cart"
            android:textSize="12sp" />

        <Button android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="#4CAF50"
            android:text="Select Fabric "
            android:id="@+id/selectfabricbtn"
            android:onClick="selectFabric"
            android:textSize="12sp"
            android:enabled="true" />

    </LinearLayout>
    <!--</LinearLayout>-->


    <!--</ScrollView>-->
</RelativeLayout>