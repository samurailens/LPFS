                            </View>
                -->
            </LinearLayout>

            <!--
                    <com.sachin.sachin.HorizontalListView
                        android:id="@+id/hlvSimpleList"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        />
            -->
            <TextView
                android:id="@+id/designPreviewtxtViewfabric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|left"
                android:padding="5dp"
                android:text="Available Fabrics"
                android:textSize="18sp"
                android:textStyle="bold" />



            <ImageView

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:maxHeight="150dp"
                android:maxWidth="150dp"
                android:layout_marginTop="5dp"
                android:background="#ffeefe"

                android:layout_gravity="center_horizontal"
                android:id="@+id/previewImageviewfabric"/>


            <!--                android:layout_weight="0.66"
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/custom_adapter_list_with_dividers"
                android:textSize="18sp" />

            <com.sachin.sachin.HorizontalListView
                android:id="@+id/hlvCustomListWithDividerAndFadingEdge"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:divider="#e00"
                android:fadingEdgeLength="5dp"
                android:requiresFadingEdge="horizontal"
                widget:dividerWidth="3dp" /> selectedItemDescriptiontxtviewfabric
        -->

            <TextView
                android:id="@+id/selectedItemDescriptiontxtviewfabric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/material_grey_300"
                android:elegantTextHeight="true"
                android:text="Description "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="5dp" />

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_weight="1.25"
                    android:text="Price : Rs. 100"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/priceTxtView"
                    android:textColor="#ff7009"
                    android:textSize="20sp"
                    android:layout_gravity="left"
                    android:gravity="top|left"
                    android:textAlignment="gravity"
                    android:typeface="serif"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp" />
                <Button
                    android:layout_weight="0.25"
                    android:id="@+id/adddesgntocartbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstrokeshape"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:clickable="true"
                    android:onClick="addtocart"
                    android:text="Select"
                    android:visibility="gone"
                    android:layout_gravity="right"
                    android:textColor="#ff7009"
                    android:backgroundTint="#dcddd1" />


            </LinearLayout>
                <Button

                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:id="@+id/addtocartbtn"
                    android:onClick="addtocart"
                    android:text="Select"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:background="#54dc58"
                    android:layout_marginTop="15dp" />

            <com.sachin.sachin.HorizontalListView
                android:id="@+id/hlvCustomListfabric"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_height="75dp" />


