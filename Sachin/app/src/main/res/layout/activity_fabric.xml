            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/buydesignbtn"

                android:background="@drawable/android_rate_star_big_on"
                android:clickable="true"
                android:layout_gravity="right"
                android:layout_marginRight="90dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:text="add to wishlist"
                android:layout_gravity="right"
                android:background="@null"
                android:paddingRight="50dp"
                android:visibility="invisible" /> -->
            <!--
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >



                        <Button
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:text="get this \n "
                android:background="#ff7522"

                />
            <Button
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:text="add to wishlist \n "
                android:background="#ffaa1d"
                android:id="@+id/adddesigntowishlistbtn" />

            </LinearLayout>-->
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:gravity="bottom|center"
        android:baselineAligned="true">

        <Button android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cart(0)"
            android:drawableLeft="@drawable/shopping_cart_24"

            android:background="#e91e63"
            android:id="@+id/carttxtviewfabric"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:textSize="12sp"
            android:onClick="cart" />

        <Button android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="#4CAF50"
            android:text="Select Size"
            android:id="@+id/selectSizeBtn"
            android:onClick="selectSize"
            android:textSize="12sp" />

    </LinearLayout>
